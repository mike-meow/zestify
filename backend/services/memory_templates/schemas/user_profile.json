{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User Profile Schema",
  "description": "Schema for user profile memory",
  "type": "object",
  "required": ["metadata", "user_profile"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["user_id", "created_at", "last_updated", "version"],
      "properties": {
        "user_id": { "type": "string" },
        "created_at": { "type": "string", "format": "date-time" },
        "last_updated": { "type": "string", "format": "date-time" },
        "version": { "type": "string" }
      }
    },
    "user_profile": {
      "type": "object",
      "required": ["user_id", "name", "created_at", "updated_at"],
      "properties": {
        "user_id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string" },
        "created_at": { "type": "string", "format": "date-time" },
        "updated_at": { "type": "string", "format": "date-time" },
        "demographics": {
          "type": "object",
          "properties": {
            "birth_date": { "type": "string", "format": "date" },
            "age": { "type": "integer", "minimum": 0 },
            "gender": { "type": "string" },
            "height": { "type": "number", "minimum": 0 },
            "weight": { "type": "number", "minimum": 0 },
            "blood_type": { "type": "string" }
          }
        },
        "fitness_timeline": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["timestamp", "fitness_level"],
            "properties": {
              "timestamp": { "type": "string", "format": "date-time" },
              "fitness_level": { "type": "string", "enum": ["beginner", "intermediate", "advanced"] },
              "notes": { "type": "string" }
            }
          }
        },
        "goals": {
          "type": "object",
          "properties": {
            "active": {
              "type": "array",
              "items": { "$ref": "#/definitions/goal" }
            },
            "completed": {
              "type": "array",
              "items": { "$ref": "#/definitions/goal" }
            }
          }
        },
        "preferences": {
          "type": "object",
          "properties": {
            "workout_locations": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["location", "priority"],
                "properties": {
                  "location": { "type": "string" },
                  "priority": { "type": "integer", "minimum": 0 },
                  "added_at": { "type": "string", "format": "date-time" }
                }
              }
            },
            "time_availability": {
              "type": "object",
              "properties": {
                "preferred_time": { "type": "string" },
                "days_per_week": { "type": "integer", "minimum": 0, "maximum": 7 },
                "minutes_per_session": { "type": "integer", "minimum": 0 },
                "updated_at": { "type": "string", "format": "date-time" }
              }
            },
            "equipment_access": {
              "type": "array",
              "items": { "type": "string" }
            },
            "activity_preferences": {
              "type": "object",
              "properties": {
                "preferred": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "avoided": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            }
          }
        },
        "motivation_factors": {
          "type": "array",
          "items": { "type": "string" }
        },
        "dietary_preferences": {
          "type": "array",
          "items": { "type": "string" }
        },
        "sleep_habits": {
          "type": "object",
          "properties": {
            "bedtime": { "type": "string" },
            "wake_time": { "type": "string" },
            "quality": { "type": "string" }
          }
        },
        "notes": { "type": "string" },
        "references": {
          "type": "object",
          "properties": {
            "health_metrics_file": { "type": "string" },
            "workout_memory_file": { "type": "string" },
            "conversation_memory_file": { "type": "string" }
          }
        }
      }
    }
  },
  "definitions": {
    "goal": {
      "type": "object",
      "required": ["id", "type", "description", "created_at", "target_date"],
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string" },
        "description": { "type": "string" },
        "created_at": { "type": "string", "format": "date-time" },
        "target_date": { "type": "string", "format": "date" },
        "progress": { "type": "integer", "minimum": 0, "maximum": 100 },
        "status": { "type": "string", "enum": ["active", "completed", "abandoned"] },
        "metrics": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "current", "target", "unit"],
            "properties": {
              "name": { "type": "string" },
              "current": { "type": "string" },
              "target": { "type": "string" },
              "unit": { "type": "string" }
            }
          }
        },
        "completion_date": { "type": "string", "format": "date" }
      }
    }
  }
}
